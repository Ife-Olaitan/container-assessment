# --- Application ---
PORT=8080

# --- Connect Database ---
# For Docker containers (app running inside Docker)
MONGO_URI=mongodb://root:example@mongodb:27017/

# --- Database Root User Creds ---
MONGO_USERNAME=root
MONGO_PASSWORD=example
DB_NAME=much_todo_db

# --- Authentication ---
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_EXPIRATION_HOURS=72

# --- Logging ---
# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=DEBUG
# Log format: "json" or "text"
LOG_FORMAT=json

# --- Testing ---
INTEGRATION=true

# --- Optional: Redis Configuration (set ENABLE_CACHE=true to enable) ---
ENABLE_CACHE=false
REDIS_ADDR=redis:6379
REDIS_PASSWORD=
REDIS_DB=0